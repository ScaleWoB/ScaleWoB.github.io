# Run ESLint before commit
npm run lint

# If ESLint finds errors, prevent the commit
if [ $? -ne 0 ]; then
    echo ""
    echo "❌ ESLint found errors. Please fix the linting issues before committing."
    echo ""
    echo "You can fix these issues by running:"
    echo "  npm run lint"
    echo ""
    echo "Or use automatic fixing with:"
    echo "  npm run lint -- --fix"
    echo ""
    exit 1
fi

echo "✅ ESLint checks passed!"